<section class="h-100 h-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <div class="card-body p-4 p-md-5">
            <h2 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2"> Edit User</h2><hr>
            <%= form_with(model: @user, url: admin_user_path) do |f| %>
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                    <% @user.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <center>
                <% if @user.profile_picture.attached? %>
                  <%= image_tag @user.profile_picture, size: "220x220" %>
                <% end %>
              </center> 
              <hr>
              
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <%= f.label :profile_picture %><br />
                    <%= f.file_field :profile_picture %>
                  </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div>
                    <%= f.label :first_name %><br />
                    <%= f.text_field :first_name, autofocus: true, placeholder: "John", class: "form-control mb-1" %>
                  </div>
                </div>

                <div class="col-md-6 mb-4">
                  <div>
                    <%= f.label :last_name %><br />
                    <%= f.text_field :last_name, placeholder: "Doe", class: "form-control mb-1" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div>
                    <%= f.label :email %><br />
                    <%= f.text_field :email, placeholder: "john.doe@campencounter.com", class: "form-control mb-1" %>
                  </div>
                </div>

                <div class="col-md-6 mb-4">
                  <div>
                    <%= f.label :phone_number %><br />
                    <%= f.text_field :country_code, placeholder: '92', class: "form-control-sm mb-1" %>
                    <%= f.text_field :phone_number, placeholder: "323-555-0000", class: "form-control mb-1" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div>
                    <%= f.label :country %>
                    <%= f.country_select :country, {}, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div>
                    <%= f.label :role %><br />
                    <%= f.select :role, ['admin', 'user'], {}, class: "form-control mb-1" %>
                  </div>
                </div>
              </div>
             
              <div class="actions">
                <%= f.submit class: "btn btn-success" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
