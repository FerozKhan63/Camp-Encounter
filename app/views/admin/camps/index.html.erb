<div class="card rounded-3">
  <div class="card-body">
    <h1>Camps</h1>
    <div class="row">
      <div class = "col-lg-6">
        <%= form_with(url: admin_camps_path, method: :get) do |f| %>
          <%= f.text_field :query, class: 'search', placeholder: "Search by Camp Location Title" %>
          <%= f.submit "Search" , class: "btn btn-success"%>
        <% end %>
      </div>
      <div class="col-lg-6">
        <div class="button" id="new-user">
          <%= link_to 'Add Camp', new_admin_camp_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
    <hr>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= sortable "name" %></th>
          <th><%= sortable "location" %></th>
          <th><%= sortable "status" %></th>
          <th><%= sortable "registration_date", "Registration Date" %></th>
          <th>Actions</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <%= render @camps %>
      </tbody>

    </table><br>
    <p><%= link_to("Generate Report", admin_camps_path(format: :csv), class: "btn btn-success",) %></p>
    <%= pagy_bootstrap_nav(@pagy).html_safe %> 
  <div>
<div>
