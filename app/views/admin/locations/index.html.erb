<div class="card rounded-3">
  <div class="card-body">
    <h1>Camp Locations</h1>
    <div class="row">
      <div class = "col-lg-6">
        <%= form_with(url: admin_locations_path, method: :get) do |f| %>
          <%= f.text_field :query, class: 'search', placeholder: "Search by Camp Location Title" %>
          <%= f.submit "Search" , class: "btn btn-success"%>
        <% end %>
      </div>
      <div class = "col-lg-6">
        <div class="button" id = "new-user">
          <%= link_to 'Add Location', new_admin_location_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
    <hr>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= sortable "name" %></th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr id="location_<%= location.id %>">
            <td><%= location.name %></td>
            <td>
              <%= link_to 'Edit', edit_admin_location_path(location), class: "btn btn-success", disabled: "true"%>
              <%= link_to 'Delete', admin_location_path(location), method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "btn btn-danger"%>
            </td> 
          </tr>
        <% end %>
      </tbody>

    </table><br>
    <p><%= link_to("Generate Report", admin_locations_path(format: :csv), class: "btn btn-success",) %></p>
    <%= pagy_bootstrap_nav(@pagy).html_safe %> 
  <div>
<div>
