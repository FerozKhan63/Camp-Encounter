<%= render 'layouts/formlayout'%>
<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-lg-8 col-xl-6">
    <div class="card rounded-3">
      <div class="card-body p-4 p-md-5">
        <h2 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2"> Edit User Application </h2><hr>

        <%= form_with(model: [:admin, @enrolment]) do |f| %>
          <% if @enrolment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@enrloment.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                <% @enrolment.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-outline mb-4">
            <%= f.radio_button :gender, "Male" %>
            <%= f.label :gender ,"Male" %>
            <%= f.radio_button :gender, "Female" %>
            <%= f.label :gender ,"Female" %>
            <%= f.radio_button :gender, "Other" %>
            <%= f.label :gender , "Other" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :age  %><br>
            <%= f.text_field :age, size: "5" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.radio_button :camp_options, "Glamp" %>
            <%= f.label :camp_options ,"Glamp" %>
            <%= f.radio_button :camp_options, "Camp" %>
            <%= f.label :camp_options , "Camp" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.radio_button :tent_sharing, "true" %>
            <%= f.label :tent_sharing , "Double" %>
            <%= f.radio_button :tent_sharing, "false" %>
            <%= f.label :tent_sharing , "Single" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.text_area :medical_history %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :blood_group  %>
            <%= f.select :blood_group, Enrolment::BlOODGROUPS %>
          </div> 

          <div class="form-outline mb-4">
            <%= f.radio_button :insurance, "true" %>
            <%= f.label :insurance , "Yes" %>
            <%= f.radio_button :insurance, "false" %>
            <%= f.label :insurance , "No" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :cnic, "CNIC: " %>
            <%= f.text_field :cnic, size: "20" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :emergency_contact %>
            <%= f.text_field :emergency_contact %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :billing_address %>
            <%= f.text_field :billing_address, size: "20" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :mailing_adrress %>
            <%= f.text_field :mailing_address, size: "20" %>
          </div>
         
          <br>
         
          <div class="actions">
            <%= f.submit class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
