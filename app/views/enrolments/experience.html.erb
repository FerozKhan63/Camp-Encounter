<%= render 'layouts/formlayout'%>
<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-lg-8 col-xl-6">
    <%= render "progress_bar", object: @progress %><br>
    <div class="card rounded-3">
      <div class="card-body p-4 p-md-5">
        <h2 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Experience</h2><hr>
        <%= form_with(model: @enrolment, local: true, method: :put, url: wizard_path) do |f| %>
          <%= f.hidden_field :submitted, value: "true" %>
          <h5>Please briefly mention if you have any prior camping experience</h5><hr>
          
          <div class="form-outline mb-4">
            <%= f.text_area :experience %>
          </div>
          
          <div class="form-outline">
            <%= link_to "Previous", previous_wizard_path(enrolment: @enrolment), class: "btn btn-success" %>
            <% if @enrolment.progress >=90 %>
              <%= f.submit "Submit Application", data: { confirm: 'Are you sure? You wont be able to edit application after submission' }, class: "btn btn-success" %>
            <% else %>
              <%= link_to "Go to Dashboard", wizard_path(:dashboard), class: "btn btn-success" %>
            <% end %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
