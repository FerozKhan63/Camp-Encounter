<section class="h-100 h-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <%= render "progress_bar", object: @progress %><br>
        <div class="card rounded-3">
          <div class="card-body p-4 p-md-5">
            <h4 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Please select your blood group</h4><hr>
            <%= form_with(model: @enrolment, local: true, method: :put, url: wizard_path) do |f| %>
       
              <div class="form-outline mb-4">
                <%= f.label :blood_group  %>
                <%= f.select :blood_group, Enrolment::BlOODGROUPS, {},class: "form-control w-25 mb-4" %>
              </div> 

              <div class="form-outline">
                <%= link_to "Previous", previous_wizard_path(enrolment: @enrolment), class: "btn btn-success" %>
                <%= f.submit "Next", class: "btn btn-success" %>
                 <%= link_to "Skip", wizard_path(:insurance, enrolment: @enrolment), class: "btn btn-info" %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
