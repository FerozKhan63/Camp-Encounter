<%= render 'layouts/formlayout'%>
<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-lg-8 col-xl-6">
    <%= render "progress_bar", object: @progress %><br>
    <div class="card rounded-3">
      <div class="card-body p-4 p-md-5">
        <h2 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Do you want to be insured?</h2><hr>
        <%= form_with(model: @enrolment, local: true, method: :put, url: wizard_path) do |f| %>
          <%= hidden_field_tag :enrolment_id, @enrolment.id %>
   
          <div class="form-outline mb-4">
            <%= f.radio_button :insurance, "1" %>
            <%= f.label :insurance ,"Yes" %>
            <%= f.radio_button :insurance, "0" %>
            <%= f.label :insurance , "No" %>
          </div>

          <div class="form-outline">
            <%= link_to "Previous", previous_wizard_path(enrolment: @enrolment), class: "btn btn-success" %>
            <%= f.submit "Next", class: "btn btn-success" %>
             <%= link_to "Skip", wizard_path(:cnic, enrolment: @enrolment), class: "btn btn-info" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
