<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Country</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.email %></td>
        <td><%= "#{user.country_code} #{user.phone_number}" %></td>
        <td><%= user.country%></td>
        <td>
          <%= link_to 'Show', user_path(@users), class: "btn btn-primary"%>
          <%= link_to 'Edit', edit_user_path(@users), class: "btn btn-success" %>
          <%= link_to 'Destroy', users_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

