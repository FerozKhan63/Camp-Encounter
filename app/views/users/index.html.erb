<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="card rounded-3">
  <div class="card-body">
    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Phone Number</th>
          <th>Country</th>
          <th>Actions</th>
          <%# <th colspan="3"></th> %>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= "#{user.first_name} #{user.last_name}"%></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= "#{user.country_code} #{user.phone_number}" %></td>
            <td><%= user.country%></td>
            <td>
              <%= link_to 'Show', user_path(@users), class: "btn btn-primary"%>
              <% if user.role != "admin" %>
                <%= link_to 'Edit', edit_user_path(@users), class: "btn btn-success", disabled: "true"%>
                <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", disabled: "true"%>
              <%end%>
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table><br>
    <div id = "new-user">
      <%= link_to 'Add New User', new_user_path, class: "btn btn-success", remote: true %>
    </div>
  <div>
